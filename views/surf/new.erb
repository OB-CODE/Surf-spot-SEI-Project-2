<div class="sign_up_style">

  <h4>Add Surf Spot</h4>

  <form action="/surf" method="POST">
  <div>
    <label for="">Location Name of surf spot: </label>
    <input type="text" name="name">
  </div>

  <div>
    <label for="">Location Image URL: </label>
    <input type="text" name="image_url">
  </div>
   

  <div id='together'>
    <label for="exp">Surf experience required for location: (1 Beginner to 10 Expert)</label>
    <select name="surf_experience" id="exp">
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      <option value="5">5</option>
      <option value="6">6</option>
      <option value="7">7</option>
      <option value="8">8</option>
      <option value="9">9</option>
      <option value="10">10</option>
    </select>
  </div>

  <div id='together'>
  <label for="crowd">Average Crowd </label>
    <select name="crowd" id="crowd">
      <option value="Isolated">Isolated</option>
      <option value="Quiet">Quiet</option>
      <option value="Average">Average</option>
      <option value="Busy">Busy</option>
      <option value="PACKED">PACKED!</option>
    </select>
  </div>

  <div>
      <label for="">Hazards at spot</label>
      <input type="text" name="hazards">
  </div>
  
  <div>
    <label for="">Access to the water</label>
    <input type="text" name="access">
  </div>

  <div id='together'>
    <label for="formation">What are the waves formed on?</label>
    <select name="ocean_bottom" id="formation">
      <option value="Sand">Sand</option>
      <option value="Rock">Rock</option>
      <option value="Reef">Reef</option>
    </select>
  </div>

  <div class="together" id="green_back">
  <label for="">Latitude</label>
    <input type="text" name="latitude">
  </div>


  <div class="together" id="green_back">
  <label for="">Longitude</label>
    <input type="text" name="longitude">
  </div>


    <button>Add Location</button>
  </form>

</div>

